{
  "kind": "collectionType",
  "collectionName": "customer_reviews",
  "info": {
    "singularName": "customer-review",
    "pluralName": "customer-reviews",
    "displayName": "CustomerReview"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "customer_name": {
      "type": "string",
      "required": true
    },
    "rating": {
      "type": "integer",
      "required": true,
      "default": 5,
      "min": 1,
      "max": 5
    },
    "review": {
      "type": "text",
      "required": false
    },
    "product": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::product.product",
      "inversedBy": "customer_reviews"
    }
  }
}
