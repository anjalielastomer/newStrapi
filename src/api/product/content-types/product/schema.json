{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "description": {
      "type": "text",
      "required": true
    },
    "key_features": {
      "type": "component",
      "component": "common.text",
      "repeatable": true,
      "required": true
    },
    "customer_reviews": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::customer-review.customer-review",
      "mappedBy": "product"
    }
  }
}
